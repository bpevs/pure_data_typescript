{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "scripthost"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "paths": {
      "*": [
        "node_modules/*",
        "/node_modules/*"
      ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "**/*node_modules/**/*",
    "**/*dist/**/*",
    "**/*.test.js"
  ],
  "include": [
    "./definitions.d.ts",
    "./packages/**/*"
  ]
}
