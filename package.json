{
  "name": "pure-data",
  "author": "Ben Pevsner",
  "version": "0.0.1",
  "private": true,
  "description": "Pure Data Typescript Implementation",
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "workspaces": [
    "applications/*",
    "packages/*"
  ],
  "scripts": {
    "cleanup": "lerna clean --yes && rm -rf ./node_modules",
    "default": "lerna bootstrap --ci && yarn build && yarn test:lint && yarn test:ci",
    "lerna": "lerna",
    "prestart": "lerna run link",
    "publish": "lerna publish",
    "start": "lerna run start --parallel",
    "start:react": "yarn bootstrap && lerna run storybook",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:coverage": "yarn test:unit -- --coverage",
    "test:ci": "jest --colors --ci --maxWorkers=1",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest --colors",
    "test:watch": "jest --colors --watch"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "node-static": "^0.7.11",
    "lerna": "^3.5.1",
    "npm-run-all": "^4.1.5",
    "raf": "^3.4.1",
    "rollup": "^0.67.4",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint",
      "pre-publish": "npm-run-all test"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "**/packages/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    }
  }
}
