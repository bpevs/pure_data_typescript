{
  "name": "pdts",
  "version": "1.0.0",
  "description": "Pure Data Typescript Implementation",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p 'tsconfig.json'",
    "start": "npm run build -- --watch",
    "test": "run-p --aggregate-output test:lint test:unit",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:ci": "jest --env=jsdom --colors --ci --maxWorkers=1",
    "test:lint": "tslint --project ./tsconfig.json",
    "test:unit": "jest --env=jsdom --colors",
    "test:watch": "jest --env=jsdom --colors --watch"
  },
  "author": "Benjamin Pevsner",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "raf": "^3.4.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:lint",
      "pre-push": "npm-run-all test:lint build",
      "pre-publish": "npm-run-all test build"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      ".d.ts$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "setupFiles": [
      "<rootDir>/jestsetup.js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.(j|t)s$": "ts-jest"
    }
  }
}
